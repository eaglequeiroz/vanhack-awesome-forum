<p id="notice"><%= notice %></p>

<h1>Topics</h1>
<%= link_to 'New Topic', new_topic_path, class: "ui tiny primary button" %>

<table class="ui striped table">
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @topics.each do |topic| %>
      <tr>
        <td><%= link_to topic.title, topic %></td>
        <td><%= topic.comments.count %></td>
        <td>
            <%= link_to edit_topic_path(topic) do %>
              <i class="edit icon"></i>
            <% end %>
      </td>
        <td>
            <%= link_to topic, method: :delete, data: { confirm: 'Are you sure?' } do %>
              <i class="trash icon"></i>
            <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr><th colspan="3">
      <div class="ui right floated pagination menu">
            <%= will_paginate @topics, class: "digg_pagination" %>
      </div>
    </th>
  </tr></tfoot>
</table>
